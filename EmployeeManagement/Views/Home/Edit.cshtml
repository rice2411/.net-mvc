@model Employee   
        
<form asp-action="SubmitEdit" asp-controller="Home" method="post">  
<div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">ID</label>
            <div class="col-sm-10">
              <input type="text"  class="form-control" asp-for="@Model.Id" readonly>
            </div>
          </div>
          <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">Tên</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" asp-for="@Model.Name" >
            </div>
          </div>
                <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">Tuổi</label>
            <div class="col-sm-10">
              <input type="number"  class="form-control" asp-for="@Model.Age" >
            </div>
          </div>
          <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">Mô tả</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" asp-for="@Model.Description">
            </div>
          </div>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
          </form>